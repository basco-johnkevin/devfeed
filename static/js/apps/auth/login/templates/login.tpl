<div class="small-10 large-5 small-centered columns">
  <div class="row collapse">
    <div class="title small-12 columns">
      <h3><i class="icon-lock"></i> Login</h3>
    </div>
  </div>
  <div class="row collapse">
    <div class="small-12 columns">
      <form method="post">
        <div class="alert-region"></div>
        <div class="small-12 columns">
          <input name="email" type="text" placeholder="Email">
        </div>
        <div class="small-12 columns">
          <input name="password" type="password" placeholder="Password">
        </div>
        <div class="small-12 columns actions">
          <button type="submit" class="signin">Signin</button>
          <span class="sep">/</span>
          <a href="#" class="forgot-pass">Forgot Password</a>
          <span class="sep">/</span>
          <a href="#" class="register">Register</a>
        </div>
      </form>
    </div>
  </div>
</div>